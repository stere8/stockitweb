@page "/ProductCreate"
@model StockIT.Pages.ProductCreateModel
@using StockIT.Models

<head>
    <script src="~/ckeditor/ckeditor.js"></script>
</head>

<h2>Add Product</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="@Model.ProductModel.Name">Name:</label>
        <input type="text" id="@Model.ProductModel.Name" name="Name" required class="form-control">
    </div>
    <div class="form-group">
        <label for="@Model.ProductModel.Description">Description:</label>
        <textarea id="@Model.ProductModel.Description" id="description" name="Description" required class="form-control">Please something</textarea>
    </div>
    <div class="form-form-group">
        <label for="@Model.ProductModel.Quantity">Quantity:</label>
        <input type="number" id="@Model.ProductModel.Quantity" name="Quantity" required class="form-control">
    </div>
    <div class="form-group">
        <label for="@Model.ProductModel.Price">Price:</label>
        <input type="number" id="@Model.ProductModel.Price" name="Price" required step="0.01" class="form-control">
    </div>
    <div class="form-group">
        <label for="@Model.ProductModel.CategoryId">Category:</label>
        <select id="@Model.ProductModel.CategoryId" name="CategoryId" required class="form-control">
            <option selected disabled>-- Choose Product Category --</option>
            @foreach (Category category in @Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <script>
        ClassicEditor
            .create(document.querySelector("#description"))
            .catch(error => {
                console.error(error).minHeight;
            });
    </script>
    <div class="form-group">
        <label for="Image">Product Image (Optional):</label>  
        <input type="file" id="Image" name="Image" accept="image/*" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>

